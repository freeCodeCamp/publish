{
  "devDependencies": {
    "@playwright/test": "^1.39.0",
    "@types/node": "^20.8.10",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "turbo": "1.10.16"
  },
  "scripts": {
    "build": "turbo build",
    "prepare": "husky install",
    "lint": "turbo lint --continue",
    "seed": "turbo seed",
    "start": "turbo start",
    "develop": "turbo develop",
    "run-tools": "cd tools && docker compose up -d",
    "test": "turbo test",
    "turbo": "turbo",
    "format": "prettier --write --ignore-path=apps/backend/.gitignore --ignore-path=apps/frontend/.gitignore --ignore-path=apps/cron/.gitignore .",
    "prettier-check": "prettier --check --ignore-path=apps/backend/.gitignore --ignore-path=apps/frontend/.gitignore --ignore-path=apps/cron/.gitignore --ignore-path=.gitignore ."
  },
  "workspaces": [
    "apps/*"
  ]
}
